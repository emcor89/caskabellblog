---
import Layout from '../../layouts/BlogPost.astro';
import { getAllPosts, getAllQuitoPosts } from '../../lib/wordpress';
const posts = await getAllPosts();
const qposts = await getAllQuitoPosts();

---

<Layout
	title="Contacto"
	description="Lorem ipsum dolor sit amet"
	pubDate={new Date('August 08 2021')}
	heroImage="/blog-placeholder-about.jpg"
>
<h1>Últimos Artículos</h1>
<ul>
  {posts.map((post: { slug: any; title: unknown; excerpt: unknown; date: string | number | Date; }) => (
	<li>
	  <a href={`/blog/${post.slug}`}>{post.title}</a>
	  <p>{post.excerpt}</p>
	  <small>Publicado el: {new Date(post.date).toLocaleDateString()}</small>
	</li>
  ))}
</ul>
<h1>Artículos Quito</h1>
<p>{typeof qposts}</p>
